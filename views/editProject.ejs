
<%- include('partials/navbar', { page: '' }) %>
<div class="hero bg-base-200 p-5">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-5xl font-bold">Edit Project</h1>
      <p class="py-6"><%= project.title %></p>
    </div>
  </div>
</div>
<div class="p-5">
  <form action="/solutions/editProject" method="POST" class="space-y-4">
    <input type="hidden" name="id" value="<%= project.id %>" />
    <input type="text" name="title" value="<%= project.title %>" required class="input input-bordered w-full"/>
    <input type="url" name="feature_img_url" value="<%= project.feature_img_url %>" required class="input input-bordered w-full"/>
    <select name="sector_id" class="select select-bordered w-full" required>
      <% sectors.forEach(sector => { %>
        <option value="<%= sector.id %>" <%= (project.sector_id == sector.id) ? "selected" : "" %>><%= sector.sector_name %></option>
      <% }) %>
    </select>
    <textarea name="intro_short" class="textarea textarea-bordered w-full" required><%= project.intro_short %></textarea>
    <textarea name="summary_short" class="textarea textarea-bordered w-full" required><%= project.summary_short %></textarea>
    <textarea name="impact" class="textarea textarea-bordered w-full" required><%= project.impact %></textarea>
    <input type="url" name="original_source_url" value="<%= project.original_source_url %>" required class="input input-bordered w-full"/>
    <div class="flex gap-4">
      <button type="submit" class="btn btn-success">Update Project</button>
      <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error">Delete Project</a>
    </div>
  </form>
</div>
