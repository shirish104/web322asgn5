<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= project.title %> | Climate Solutions</title>
  <link href="/css/main.css" rel="stylesheet" />
</head>

<body class="bg-base-100 text-base-content">

  <!-- Navbar Partial (no active link for this page) -->
  <%- include('partials/navbar', { page: '' }) %>

  <!-- Hero Section -->
  <section class="container mx-auto my-12">
    <div class="hero bg-base-200 rounded-lg p-8">
      <div class="hero-content text-center">
        <div class="max-w-xl">
          <h1 class="text-4xl font-bold"><%= project.title %></h1>
          <p class="py-4 text-lg">
            Detailed information about the project: <strong><%= project.title %></strong>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Project Details Section -->
  <section class="container mx-auto px-4 py-8 grid grid-cols-1 md:grid-cols-2 gap-6 items-start">

    <!-- Project Image -->
    <div class="w-full">
      <img src="<%= project.feature_img_url %>" alt="<%= project.title %>" class="rounded-lg shadow-md w-full object-cover">
    </div>

    <!-- Project Info -->
    <div class="space-y-6">
      <div>
        <h2 class="text-2xl font-semibold">Sector</h2>
        <p class="text-lg"><%= project.Sector.sector_name %></p>
      </div>

      <div>
        <h2 class="text-2xl font-semibold">Summary</h2>
        <p class="text-lg"><%= project.intro_short %></p>
      </div>

      <div>
        <h2 class="text-2xl font-semibold">Impact</h2>
        <p class="text-lg"><%= project.impact %></p>
      </div>

      <a href="<%= project.original_source_url %>" target="_blank" class="btn btn-secondary mt-4">Learn More</a>
    </div>

  </section>

  <!-- Quote Section -->
  <section class="container mx-auto px-4 py-10 text-center">
    <h2 class="text-2xl font-semibold mb-4">Inspired Words</h2>
    <blockquote class="italic text-lg text-gray-700" id="quote">Loading quote...</blockquote>
    <p class="mt-2 font-semibold" id="author"></p>
  </section>

  <!-- Back Button -->
  <div class="text-center mb-10">
    <a href="#" onclick="history.back(); return false;" class="btn btn-outline">← Go Back</a>
  </div>

  <!-- Quote Script -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      fetch("https://dummyjson.com/quotes/random")
        .then(res => res.json())
        .then(data => {
          document.getElementById("quote").textContent = `"${data.quote}"`;
          document.getElementById("author").textContent = `— ${data.author}`;
        })
        .catch(err => {
          document.getElementById("quote").textContent = "Could not load quote.";
          console.error(err);
        });
    });
  </script>

</body>
</html>
